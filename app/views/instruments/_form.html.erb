
<%= simple_form_for(@instrument) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :brand, collection: Instrument::BRAND, prompt: "Select brand" %>
    <%= f.input :model %>
    <%= f.input :discription %>
    <%= f.input :condition, collection: Instrument::CONDITION, prompt: "Select condition" %>
    <%= f.input :finish, collection: Instrument::FINISH, prompt: "Select collor" %>
    <%= f.input :title %>
    <%= f.input :price %>
    <% if @instrument.image.attached? %>
      <div class="small-image">
        <%= image_tag(@instrument.image.variant(resize_to_limit: [100, 100])) %> <br>
        <%= @instrument.image.filename %>
      </div>      
    <% end %>
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
