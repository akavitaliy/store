<div class="row">
  <div class="col-md-12">
    <% flash.each do |name, message| %>
      <div class="alert  <%= bootstrap_class_for(name) %> alert-dismissible fade show">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <%= message %>
      </div>
    <% end %>
  </div>
</div> 